{
	"manifest_version": 2,
	"name": "Powerschool Calculator V2",
	"description": "Calculate and estimate your grades!",
	"version": "2.0",
	"author": "Arisrei Lim",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "activetab"
    ],
	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}, 

	"content_scripts": [
  	{
    "matches": [
      "<all_urls>"
    ],
    "js": [
    	"bootbox.js",
    	"sweetalert.min.js"
    ],
    "css" : [
		
    ]

  	}
		]
}